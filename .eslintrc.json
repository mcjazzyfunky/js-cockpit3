{
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },

  "env": {
    "es6": true,
    "node": true
  },

  "globals": {
    "document": false,
    "navigator": false,
    "window": false,
    "console": false,
    "alert": false
  },

  "extends": "eslint:recommended",

  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1}],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "never"],
    "no-console": ["off"]
  }
}
